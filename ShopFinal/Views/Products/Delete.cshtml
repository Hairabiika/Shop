@model ShopFinal.Models.Product

<h3>Сигурен ли сте, че искате да изтриете продукта?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Продукт
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dd class = "col-sm-10">
            <img src="@("~/image/"+Model.ImageName)" asp-append-version="true" width ="250" height="250"/>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index">Върни се обратно</a>
    </form>
</div>
